<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Light">
        <item name="themePrimary">@color/indigo</item>
        <item name="themePrimaryDark">@color/indigoDark</item>
        <item name="themeAccent">@color/indigoAccent</item>
        <item name="themeContentBackground">@color/greyAccent</item>
        <item name="themeContentBackgroundLight">@color/white</item>
        <item name="themeContentTextColor">@color/colorPrimaryDark</item>
        <item name="themeContentTextColorWhite">@color/white</item>
        <item name="themeContentTextColorLight">@color/grey_60</item>
        <item name="themeContentTextColoOnPrimary">@color/greyAccent</item>
        <item name="themeContentTextColorDivider">@color/gray_divider</item>
        <item name="themeTextColorSuccess">@color/green_A700</item>
        <item name="themeTextColorFailure">@color/error</item>
        <item name="themeTextInputLayoutBorder">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="themePrimary">@color/darkPrimary</item>
        <item name="themePrimaryDark">@color/darkPrimaryDark</item>
        <item name="themeAccent">@color/darkAccent</item>
        <item name="themeContentBackground">@color/darkPrimaryBackground</item>
        <item name="themeContentTextColorLight">@color/greyAccent</item>
        <item name="themeContentBackgroundLight">@color/darkPrimaryLighter</item>
        <item name="themeContentTextColor">@color/greyAccent</item>
        <item name="themeContentTextColorWhite">@color/white</item>
        <item name="themeContentTextColoOnPrimary">@color/darkPrimaryLighter</item>
        <item name="themeContentTextColorDivider">@color/overlay_light_20</item>
        <item name="themeTextColorSuccess">@color/green_A700</item>
        <item name="themeTextColorFailure">@color/error</item>
        <item name="themeTextInputLayoutBorder">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- ToolBar Theme -->
    <style name="TextAppearance.PayBillManager.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?themePrimary</item>
        <item name="android:gravity">center|start</item>
    </style>

    <!-- TextAppearance Headline  -->
    <style name="TextAppearance.PayBillManager.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
    </style>

    <!-- TextAppearance MainTitle  -->
    <style name="TextAppearance.PayBillManager.MainTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
    </style>

    <style name="TextAppearance.PayBillManager.MainTitle.Light" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_light</item>
    </style>

    <!-- TextAppearance Medium Title  -->
    <style name="TextAppearance.PayBillManager.Headline.Medium" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
    </style>

    <!-- TextAppearance Small Title  -->
    <style name="TextAppearance.PayBillManager.Body.Small" parent="TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
    </style>

    <style name="TextAppearance.PayBillManager.Body.Small.White" parent="TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?themeContentTextColorWhite</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
    </style>

    <!-- TextAppearance Keypad  -->
    <style name="TextAppearance.PayBillManager.Keypad" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/calculator_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>


    <!-- Title Sub-Headline Text -->
    <style name="TextAppearance.PayBillManager.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?themeContentTextColorLight</item>
        <item name="fontFamily">@font/gotham_rounded_light</item>
    </style>

    <!-- Title Sub-Headline Text -->
    <style name="TextAppearance.PayBillManager.Headline3" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="fontFamily">@font/gotham_rounded_light</item>
    </style>

    <!-- Divider View-->
    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:background">?themeContentTextColorDivider</item>
    </style>

    <!--  TextInputLayout -->
    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
    </style>

    <!-- TextAppearance Floating label TextInputLayout -->
    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">?themeAccent</item>
    </style>

    <!-- TextAppearance TextInputLayout Error-->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">?themeTextInputLayoutBorder</item>
    </style>

    <!-- TextAppearance TextInputLayout Error-->
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?themeTextColorFailure</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- CheckBoxStyle-->
    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">?themePrimary</item>
        <item name="android:colorControlActivated">?themeAccent</item>
        <item name="android:colorControlHighlight">?themeAccent</item>
        <item name="android:textColor">?themePrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorAccentLighter</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- TextAppearance Error-->
    <style name="TextAppearance.PayBillManager.Text.Error" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?themeTextColorFailure</item>
    </style>

    <!-- BottomSheet Dialog-->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- MaterialDrawer specific values -->
    <style name="CustomTheme" parent="MaterialDrawerTheme">
        <item name="material_drawer_background">?themeContentBackground</item>
        <item name="material_drawer_primary_text">?themeContentTextColor</item>
        <item name="material_drawer_primary_icon">?themeAccent</item>
        <item name="material_drawer_secondary_text">?themeContentTextColor</item>
        <item name="material_drawer_hint_text">?themeContentTextColor</item>
        <item name="material_drawer_divider">?themeContentTextColorDivider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">?themeContentTextColor</item>
        <item name="material_drawer_header_selection_text">?themeContentTextColorWhite</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->

        <item name="material_drawer_window_background">?themeContentBackground</item>
    </style>


</resources>
