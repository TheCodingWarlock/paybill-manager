<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PayBillManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorSecondary">@color/secondaryColor</item>


        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Text Styles-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.PayBillManager.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PayBillManager.Headline2</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.PayBillManager.Headline4</item>
    </style>

    <style name="Widget.PayBillManager.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.PayBillManager</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.PayBillManager.Toolbar</item>
    </style>

    <style name="TextAppearance.PayBillManager.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Text Appearance -->

    <style name="TextAppearance.PayBillManager.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="TextAppearance.PayBillManager.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.PayBillManager.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.PayBillManager.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.PayBillManager.Category" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/work_sans_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.PayBillManager.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.PayBillManager.Text.Error" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <!-- Keyboard button style -->
    <style name="TextAppearance.PayBillManager.CalculatorPad" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/calculator_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>


</resources>
